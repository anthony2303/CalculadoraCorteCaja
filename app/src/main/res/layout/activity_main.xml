<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Widget.MaterialComponents.TextView.Headline5"
            android:text="Corte de Caja"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Items con mÃ¡rgenes uniformes -->
                <TextView
                    android:id="@+id/tvEfectivo"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvTpv"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvPropinas"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvPagados"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvRetiros"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvDeuda"
                    style="@style/Widget.MaterialComponents.TextView.Body1"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="12dp"
            android:text="Guardar Corte"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="12dp"
            android:text="Compartir WhatsApp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="12dp"
            android:text="Historial"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
