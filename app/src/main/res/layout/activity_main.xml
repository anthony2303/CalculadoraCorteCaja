<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:showDividers="none">  <!-- elimina cualquier spacing invÃ¡lido -->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corte de Caja"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:divider="?attr/dividerVertical"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <TextView
                    android:id="@+id/tvEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Efectivo: $0.00"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvTpv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TPV: $0.00"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvPropinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Propinas: $0.00"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvPagados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pagados: 0 pedidos"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvRetiros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retiros: $0.00"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvDeuda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deuda actual: $0.00"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Corte"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compartir Whatsapp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
